<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_edit_text"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redmi Note 7 (4/64GB)"
        android:textSize="10pt"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_product_return_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer request"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/tv_product_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produk dalam kondisi yang masih tersegel, Garansi Interasional"
        android:textSize="8pt" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 1.800.000"
            android:textColor="#FEBC13"
            android:textSize="12pt"/>

        <Button
            android:id="@+id/bt_book_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:backgroundTint="#FEBC13"
            android:text="Book"
            android:textColor="#fff"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>