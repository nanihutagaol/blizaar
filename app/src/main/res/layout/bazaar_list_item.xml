<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/tv_bazaar_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bazaar Produk Retur Sarana Jaya - November (2019)"
        android:textSize="6pt"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_bazaar_detail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date:"
            android:textColor="#000"
            android:textSize="6pt" />

        <TextView
            android:id="@+id/tv_bazaar_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/11/19 17:00"
            android:textColor="#F50000"
            android:textSize="6pt" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_bazaar_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qr_button"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>